{
    "name": "kptv/sync",
    "description": "IPTV Provider Sync - PHP application for synchronizing IPTV provider streams to MySQL database",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.8",
        "kevinpirnie/kpt-database": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Kptv\\IptvSync\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
